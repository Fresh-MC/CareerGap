{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoGap Dashboard",
  "version": "1.0.0",
  "identifier": "com.nogap.dashboard",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NoGap Security Dashboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "url": "usb.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["*"],
          "permissions": [
            "dialog:allow-save",
            "dialog:default",
            "core:default",
            "core:path:default",
            "core:path:allow-resolve",
            "core:path:allow-normalize",
            "opener:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/policies.yaml",
      "reports/*"
    ],
    "copyright": "Copyright Â© 2025 NoGap Project",
    "category": "DeveloperTool",
    "shortDescription": "Security Policy Audit and Remediation Dashboard",
    "longDescription": "NoGap Dashboard provides a comprehensive interface for auditing and remediating Windows and Linux security policies based on industry best practices.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
